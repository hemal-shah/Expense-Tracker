<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_activity_shared_clusters"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:paddingBottom="@dimen/cluster_padding_bottom"
        android:paddingTop="@dimen/shared_cluster_rv_margin_top" />


    <TextView
        android:id="@+id/tv_empty_shared_clusters"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="@string/data_not_available"
        android:textSize="@dimen/text_size_empty"
        android:visibility="invisible"
        />


</RelativeLayout>
