<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="20dp"
    android:layout_marginStart="20dp"
    android:layout_marginTop="10dp"
    app:cardElevation="4dp"
    >

    <android.support.v7.widget.GridLayout
        android:id="@+id/ll_p_expenses"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/expense_card"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        android:padding="10dp"
        app:columnCount="4"
        app:orientation="horizontal"
        >

        <TextView
            android:id="@+id/tv_about_p_expenses"
            android:gravity="center"
            android:textColor="@color/accent"
            android:textSize="25sp"
            android:textStyle="bold|italic"
            app:layout_columnSpan="2"
            app:layout_columnWeight="2"
            app:layout_gravity="start"
            app:layout_rowSpan="1"
            app:layout_rowWeight="1"
            tools:text="Title here"
            />

        <TextView
            android:id="@+id/tv_amount_p_expenses"
            android:gravity="center"
            android:textColor="@color/accent"
            android:textSize="15sp"
            app:layout_columnSpan="2"
            app:layout_columnWeight="2"
            app:layout_gravity="end"
            app:layout_rowSpan="1"
            app:layout_rowWeight="1"
            tools:text="amount here"
            />

        <TextView
            android:id="@+id/tv_description_p_expenses"
            android:gravity="center"
            app:layout_columnSpan="4"
            app:layout_columnWeight="4"
            app:layout_gravity="start"
            app:layout_rowSpan="2"
            app:layout_rowWeight="2"
            tools:text="Long text goes here."
            />

        <TextView
            android:id="@+id/tv_time_p_expenses"
            android:gravity="center"
            android:textSize="15sp"
            app:layout_columnSpan="1"
            app:layout_columnWeight="1"
            app:layout_gravity="start"
            tools:text="time here"
            />

        <ImageButton
            android:id="@+id/ib_delete_p_expenses"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:src="@drawable/ic_delete_black_24dp"
            app:layout_column="3"
            app:layout_columnSpan="1"
            app:layout_columnWeight="1"
            app:layout_gravity="end"
            app:layout_row="3"
            />

    </android.support.v7.widget.GridLayout>


</android.support.v7.widget.CardView>